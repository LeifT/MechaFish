<UserControl x:Class="MasterAngler.View.DataView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:data="clr-namespace:MasterAngler.View.Data"
        mc:Ignorable="d ignore"
        DataContext="{Binding Data, Source={StaticResource Locator}}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>

    <Grid DataContext="{Binding Source={StaticResource Locator}}">
        <Grid Visibility="{Binding MenuPanel.IsStatisticsVisible, Converter={StaticResource BoolToVisConverter}}">
            <data:StatisticsView/>
        </Grid>

        <Grid Visibility="{Binding MenuPanel.IsHotkeysVisible, Converter={StaticResource BoolToVisConverter}}">
            <data:KeyBindingsView />
        </Grid>

        <Grid Visibility="{Binding MenuPanel.IsOptionsVisible, Converter={StaticResource BoolToVisConverter}}">
            <data:SettingsView />
        </Grid>
    </Grid>
</UserControl>
